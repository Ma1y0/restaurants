generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id
  name      String
  reviews   Review[]
  email String @unique
  password String

  restaurants Restaurant[] @relation("UserToRestaurant")
}

model Restaurant {
  id      String     @id
  name    String
  reviews Review[]

  user    User     @relation("UserToRestaurant", fields: [userId], references: [id])
  userId  String
}

model Review {
  id           String     @id
  rating       Int
  text         String?
  user         User    @relation(fields: [userId], references: [id])
  userId       String
  restaurant   Restaurant  @relation(fields: [restaurantId], references: [id])
  restaurantId String
}